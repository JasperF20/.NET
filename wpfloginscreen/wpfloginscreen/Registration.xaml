<Window x:Class="wpfloginscreen.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="463.918" Width="511.2" FontSize="14" Background="yellow">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Registratie" Foreground="White" FontSize="25" HorizontalAlignment="Center" Margin="162,0,95.354,0" Height="47" Width="168"/>
            <Separator/>
            <Label Content="Username" Foreground="White"/>
            <TextBox x:Name="regUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <TextBox x:Name="regPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="btnSubmit" Click="generate_password" Content="Wachtwoord genereren" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="to_login" Click="To_Login_Click" Content="Naar inloggen" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
